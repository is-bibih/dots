! ******************
! urxvt config
! ******************

! **** declare extensions ****
urxvt.perl-ext-common: default,selection-to-clipboard,matcher,tabbedex

! **** keybindings for copy-paste ****
urxvt.keysym.Shift-Control-V: eval:paste_clipboard
urxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

! **** clickable urls ****
urxvt.url-launcher:   /usr/bin/xdg-open
urxvt.matcher.button: 1

! **** remove the weird yellow box on shift-ctrl ****
urxvt.iso14755: false

! **** colorscheme ****
! special
*.foreground:   #cbe3e7
*.background:   #311c24
*.cursorColor:  #cbe3e7
! black
*.color0:       #565575
*.color8:       #100e23
! red
*.color1:       #ff8080
*.color9:       #ff5458
! green
*.color2:       #95ffa4
*.color10:      #62d196
! yellow
*.color3:       #ffe9aa
*.color11:      #ffb378
! blue
*.color4:       #91ddff
*.color12:      #65b2ff
! magenta
*.color5:       #c991e1
*.color13:      #906cff
! cyan
*.color6:       #aaffe4
*.color14:      #63f2f1
! white
*.color7:       #e7cbe6
*.color15:      #c1a6cb

! **** transparency ****
urxvt*depth:        32
urxvt*background:   [70]#1e1c31
urxvt*blurRadius:   5

! **** font ****
urxvt.font:	xft:Iosevka Nerd Font Mono:pixelsize=12

! **** delet scrollbar and make it prettier ****
urxvt*scrollBar:                  false
urxvt*mouseWheelScrollPage:       false
urxvt*cursorBlink:                true
urxvt*saveLines:                  5000
urxvt*internalBorder: 5
urxvt*geometry: 70x19
